{% layout "default" %}

<style>
	body {
		background-color: #f8f9fa;
	}

	.container {
		display: flex;
		align-items: center;
		justify-content: center;
		max-width: 500px;
		margin-top: 100px;
	}

	.card {
		border: none;
	}

	.card-body {
		padding: 40px;
	}

	.card-title {
		font-size: 24px;
		font-weight: bold;
		margin-bottom: 30px;
	}

	.form-control {
		border-radius: 25px;
		padding: 18px 24px;
	}

	.btn-primary {
		border-radius: 25px;
		padding: 14px 40px;
		font-size: 18px;
		font-weight: bold;
		background-color: #007bff;
		border-color: #007bff;
	}

	.btn-primary:hover {
		background-color: #0056b3;
		border-color: #0056b3;
	}

	.alert-success {
		background-color: #d4edda;
		border-color: #c3e6cb;
		color: #155724;
	}

	.alert-danger {
		background-color: #f8d7da;
		border-color: #f5c6cb;
		color: #721c24;
	}
</style>

<div class="container">
	<div class="card shadow-sd">
		<div class="card-body">
			<h5 class="card-title">{{ title }}</h5>
			{% if not url and not truncate %}
			<form action="/home" method="POST">
				<div class="mb-3">
					<input type="url" class="form-control" name="originalUrl" value="{{ originalUrl }}" placeholder="Enter the original URL" required>
				</div>
				<button type="submit" class="btn btn-primary">Shorten</button>
			</form>
			{% endif %}
			{% if success %}
			<div class="alert alert-success mt-3">
				<strong>Success!</strong> {{ success }}
			</div>
			{% endif %}
			{% if error %}
			<div class="alert alert-danger mt-3">
				<strong>Error!</strong> {{ error }}
			</div>
			{% endif %}
			{% if url %}
			<div class="mt-3">
				<p><strong>Shortened Link:</strong> <a href="{{ url }}" target="_blank">{{ url }}</a></p>
				<p><strong>Shortened Link Clicks Counter:</strong> <a href="{{ url }}/clicks" target="_blank">{{ url }}/clicks</a></p>
			</div>
			{% endif %}
		</div>
	</div>
</div>