{% layout "default" %}

<style>
	body {
		background: linear-gradient(135deg, #f8fafc 0%, #e9ecef 100%);
		min-height: 100vh;
		margin: 0;
		font-family: 'Inter', Arial, sans-serif;
		color: #222;
	}

	.container {
		display: flex;
		align-items: center;
		justify-content: center;
		min-height: 100vh;
	}

	.card {
		background: #fff;
		border-radius: 18px;
		box-shadow: 0 4px 24px rgba(0, 0, 0, 0.07);
		border: none;
		width: 100%;
		max-width: 400px;
		transition: box-shadow 0.2s;
	}

	.card:hover {
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.10);
	}

	.card-body {
		padding: 2.5rem 2rem;
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.card-title {
		font-size: 1.6rem;
		font-weight: 600;
		margin: 0 0 1rem 0;
		letter-spacing: -0.5px;
		text-align: center;
	}

	.form-control {
		border-radius: 999px;
		padding: 1rem 1.25rem;
		border: 1px solid #e0e0e0;
		font-size: 1rem;
		outline: none;
		transition: border-color 0.2s;
		background: #f7f7f9;
	}

	.form-control:focus {
		border-color: #007bff;
		background: #fff;
	}

	.btn-primary {
		border-radius: 999px;
		padding: 0.85rem 2.5rem;
		font-size: 1.1rem;
		font-weight: 600;
		background: linear-gradient(90deg, #007bff 60%, #0056b3 100%);
		border: none;
		color: #fff;
		cursor: pointer;
		transition: background 0.2s, box-shadow 0.2s;
		box-shadow: 0 2px 8px rgba(0, 123, 255, 0.10);
	}

	.btn-primary:hover {
		background: linear-gradient(90deg, #0056b3 60%, #007bff 100%);
		box-shadow: 0 4px 16px rgba(0, 123, 255, 0.13);
	}

	.alert {
		border-radius: 12px;
		padding: 1rem 1.25rem;
		font-size: 1rem;
		margin: 0;
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.alert-success {
		background: #eafaf1;
		border: 1px solid #b7eedc;
		color: #218838;
	}

	.alert-danger {
		background: #fbeaea;
		border: 1px solid #f5c6cb;
		color: #c82333;
	}

	.mt-3 {
		margin-top: 1.5rem;
	}

	.mb-3 {
		margin-bottom: 1.5rem;
	}

	a {
		color: #007bff;
		text-decoration: none;
		word-break: break-all;
		transition: color 0.2s;
	}

	a:hover {
		color: #0056b3;
	}
</style>

<div class="container">
	<div class="card">
		<div class="card-body">
			{%- comment -%} Page Title {%- endcomment -%}
			<h5 class="card-title">{{ title }}</h5>

			{%- comment -%} Show form if no URL or truncate result {%- endcomment -%}
			{% if not url and not truncate %}
			<form action="/home" method="POST" autocomplete="off">
				<div class="mb-3">
					<input type="url" class="form-control" name="originalUrl" value="{{ originalUrl }}"
						placeholder="Paste your long URL here" required autofocus>
				</div>
				<button type="submit" class="btn btn-primary">Shorten URL</button>
			</form>
			{% endif %}

			{%- comment -%} Success message {%- endcomment -%}
			{% if success %}
			<div class="alert alert-success mt-3">
				<strong>Success!</strong> {{ success }}
			</div>
			{% endif %}

			{%- comment -%} Error message {%- endcomment -%}
			{% if error %}
			<div class="alert alert-danger mt-3">
				<strong>Error!</strong> {{ error }}
			</div>
			{% endif %}

			{%- comment -%} Show shortened URL and click counter {%- endcomment -%}
			{% if url %}
			<div class="mt-3">
				<p>
					<strong>Shortened Link:</strong>
					<a href="{{ url }}" target="_blank" rel="noopener">{{ url }}</a>
				</p>
				<p>
					<strong>Clicks Counter:</strong>
					<a href="{{ url }}/clicks" target="_blank" rel="noopener">{{ url }}/clicks</a>
				</p>
			</div>
			{% endif %}
		</div>
	</div>
</div>